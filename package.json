{
  "name": "checkout-e2e",
  "version": "1.0.0",
  "description": "Cypress E2E UI tests for Circuly Checkout API",
  "private": true,
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:headed": "cypress run --headed",

    "test:cart": "cypress run --spec 'cypress/e2e/cart/**'",
    "test:payment": "cypress run --spec 'cypress/e2e/payment/**'",
    "test:tax": "cypress run --spec 'cypress/e2e/tax/**'",
    "test:order": "cypress run --spec 'cypress/e2e/order/**'",
    "test:shipping": "cypress run --spec 'cypress/e2e/shipping/**'",
    "test:voucher": "cypress run --spec 'cypress/e2e/voucher/**'",
    "test:integration": "cypress run --spec 'cypress/e2e/integration/**'",
    "test:regression": "cypress run --spec 'cypress/e2e/regression/**'",

    "test:p1": "cypress run --env grepTags='@p1'",
    "test:p2": "cypress run --env grepTags='@p2'",
    "test:smoke": "cypress run --env grepTags='@smoke'",
    "test:nightly": "cypress run --env grepTags='@p1+@p2'",

    "test:shopify": "cypress run --env grepTags='@shopify'",
    "test:woocommerce": "cypress run --env grepTags='@woocommerce'",
    "test:stripe": "cypress run --env grepTags='@stripe'",
    "test:adyen": "cypress run --env grepTags='@adyen'",
    "test:mollie": "cypress run --env grepTags='@mollie'",

    "report:generate": "npx mochawesome-merge mochawesome-report/*.json > mochawesome-report/merged.json && npx marge mochawesome-report/merged.json -f report -o mochawesome-report",
    "report:clean": "rimraf mochawesome-report cypress/screenshots cypress/videos",

    "lint": "eslint cypress --ext .ts",
    "lint:fix": "eslint cypress --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "cypress": "^13.17.0",
    "typescript": "^5.5.0",
    "@cypress/grep": "^4.1.0",
    "cypress-mochawesome-reporter": "^3.8.0",
    "cypress-iframe": "^1.0.1",
    "cypress-real-events": "^1.13.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-plugin-cypress": "^3.6.0",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.0",
    "@faker-js/faker": "^9.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
